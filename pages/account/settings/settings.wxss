/* pages/account/settings/settings.wxss */
/* 设置页面 */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(236, 237, 238);

}

.version{
  
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30px;
  padding-bottom: 20px;
  
}

.logo{
  width: 70px;
  height: 70px;
  margin-bottom: 15px;
}

.app_name{
  font-weight: 500;
  font-size: 22px;
}

.version_number{
  font-size: 16px;
}

.personOptionContainer {
  width: 100%;
  background-color: #FFF;
	font-size: 15px;
	margin-top: 13%;
  border-top: 1rpx solid rgb(216, 217, 218);
  border-bottom: 1rpx solid rgb(216, 217, 218);
}

.optionNavitator {
  background-color: #FFF;
  height: 55px;
  width: 100%;
	line-height: 45px;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.optionText {
  width: 20%;
  padding-left: 3.5%;

}
.optionLogo {
  width: 25px;
  height: 25px;
  margin-left: 5%;
}
.arrowIcon {
  width: 15px;
  height: 20px;
  padding-left: 70%;
  padding-right: 0%;
}

.line {
  border-bottom: 1rpx solid rgb(216, 217, 218);
  margin-left: 3.5%;
}



.logOutButton {
  width: 100%;
  height: 50px;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 30px;
  position: absolute;
  bottom: 60px;

  border-top: 1rpx solid rgb(216, 217, 218);
  border-bottom: 1rpx solid rgb(216, 217, 218);
}

.logOutButtonText {
  width: 100%;
  text-align: center;
}