/* pages/account/Info/Info.wxss */
/* 个人信息 */

page{
  height: 100%;
  width: 100%;
  background-color: rgb(236, 237, 238);
  font-size: 15px;
}

.infoModifyContainer {
  width: 100%;
  background-color: white;
}

.avatarContainer {
  width: 100%;
  height: 50px;
  background-color: white;
  align-items: center;
  display: flex;
  flex-direction: row;
  padding-top: 10px;
  padding-bottom: 10px;
}

.profileContainer {
  width: 100%;
  height: 30px;
  background-color: white;
  align-items: center;
  display: flex;
  flex-direction: row;
  padding-top: 10px;
  padding-bottom: 10px;
}

.profileTitle {
  padding-left: 10px;
  position: absolute;
}

.profileText {
  width: 40%;
  color: rgb(105, 105, 105);
  margin-left: 52%;
  position: absolute;
  text-align: right;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 79%;
  border-radius: 50%;
  position: absolute;
}

.arrowIcon {
  width: 15px;
  height: 20px;
  margin-left: 95%;
  position: absolute;
}

.line {
  border-bottom: 1rpx solid rgb(216, 217, 218);
  margin-left: 10px;
}