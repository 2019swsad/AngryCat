/* pages/account/wallet/wallet.wxss */
/* 个人信息页面 */
page {
  height: 100%;
}
.walletPage {
  background-color: #FFF;
  height: 100%;
  justify-content: center;
}

/* 顶部信息栏 */
.personalInfoContainer {
	padding: 4% 0%;
	background-color: #FFF;
}
.avatarContainer {
	text-align: center;
  justify-content: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.nicknameContainer {
	text-align: center;
	color: #696969;
}

/* 钱包信息栏*/
.walletInfoContainer {
  display: flex;
  flex-direction: row;
  height: 10%;
  background-color: #FFF;
}
.balanceContainer {
  flex:1;
  height: 80%;
  text-align: center;
}
.creditContainer {
  flex:1;
  height: 80%;
  text-align: center;
}
.walletText {
  color: #696969;
  font-size: 30rpx;
}
.line {
  border-left: 1px solid rgb(235, 235, 235);
}

/* 按钮*/
.buttonContainer {
  margin-top: 50%;
}
.topUpButton {
  width: 50%;
  color:#FFF;
  font-weight: bold;
}
.withdrawButton {
  margin-top: 5%;
  width: 50%;
  color:rgb(23, 173, 25);
  font-weight: bold;
  background-color: rgb(244, 245, 246);
}

.topUpButton::after,.withdrawButton::after{
  border: none;
}