/* pages/index/searchTask/searchTask.wxss */
@import "../../../lib/styles/singleTask.wxss";

page {
  width: 100%;
  height: 100%;
}

.top_area {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999999;
}

/* 搜索栏*/
.search_box {
  display: flex;
  flex-direction: row;
  padding-bottom: 13px;
}

.search_input {
  width: 60%;
  margin-left: 5px;
  padding: 7px 24px;
  background-color: transparent;
  transition: transform 250ms ease-in-out;
  font-size: 14px;
  line-height: 18px;
  color: #575756;
  background-position: 95% center;
  border-radius: 50px;
  border: 1px solid #575756;
  backface-visibility: hidden;
  transform-style: preserve-3d;
}

.search_btn {
  margin-top: 2px;
  width: 65px;
  height: 35px;
  line-height: 2.15555556;
  text-align: center;
  border-radius: 5px;
  font-size: 16px;
  font-weight: bold;
}

/* 过滤器栏*/
.filterContainer {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid rgb(216, 217, 218);
}

.picker {
  height: 26px;
  padding: 5px 8px;
  vertical-align: middle;
  line-height: 26px;
  font-size: 16px;
  background-color: rgb(250, 251, 252);
  border: 1rpx solid #ccc;
  border-radius: 5px;
  width: 40%;
  margin-bottom: 2%;
}

.picker_icon {
  width: 20px;
  height: 20px;
  margin-top: 4px;
  float: right;
}

.result_tasks {
  width: 100%;
  height: 100%; 
  position: fixed;
  top:102px;
}

.hover{
  background-color: #DCDCDC
}