/* pages/index/searchTask/searchTask.wxss */
@import "../../../lib/styles/singleTask.wxss";
page{
  width: 100%;
  height: 100%;
}

.search_box{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(235, 235, 235);
  padding-bottom:13px; 
}

.search_input {
  width: 60%;
  margin-left: 5px;
  padding: 7px 24px;
  background-color: transparent;
  transition: transform 250ms ease-in-out;
  font-size: 14px;
  line-height: 18px;

  color: #575756;
  background-color: transparent;

  background-position: 95% center;
  border-radius: 50px;
  border: 1px solid #575756;
  transition: all 250ms ease-in-out;
  backface-visibility: hidden;
  transform-style: preserve-3d;
}


.search_btn {
  margin-top: 2.5px;
  width: 65px;
  height: 35px;
  line-height:2.15555556;
  text-align:center;
  border-radius:5px;
  font-size: 16px;
  font-weight: bold;
}
