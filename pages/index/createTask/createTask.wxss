@import "../../../lib/weui.wxss";

page{
  width: 100%;
  height: 100%;
}

.main{
  padding-left:10px;
  padding-right:10px;
}

.section{
  margin-bottom: 10px;
}

.section_title {
  font-size: 18px;
  margin-bottom: 10px;

}

.input {
  background-color: #fff;
  background-position: right 8px center;
  background-repeat: no-repeat;
  border: 1px solid #d1d5da;
  border-radius: 3px;
  box-shadow: inset 0 1px 2px rgba(27,31,35,.075);
  color: #24292e;
  font-size: 16px;
  line-height: 20px;
  min-height: 34px;
  outline: none;
  padding: 6px 8px;
  vertical-align: middle;
}

.picker {
  padding: 13rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
}

input.input11111[type=text], input.input11111[type=number]{
  margin: 4rpx 0;
  width: 100%;
  display: inline-block;
  border: 1rpx solid #ccc;
  border-radius: 4rpx;
  box-sizing: content-box;
  padding: 13rpx;
}

.section {
  padding: 6rpx 4rpx;
}

.apply_btn_area {
  display:flex; 
  flex-direction: row;
  margin-top: 20px;
  margin-bottom: 20px;
}

.apply_btn {
  margin-top:10px; 
  line-height:2.45555556;
  text-align:center;
  border-radius:5px;
  font-size: 16px;
  width: 120px;
  height: 40px;
  visibility:visible;
}

