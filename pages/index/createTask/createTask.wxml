<!--pages/index/createTask/createTask.wxml-->
<view class="main">
  <!-- <button bindtap="tempLogin">LOGIN</button> -->
  <view class="main_title">发布任务</view>


  <form class="from_style" bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <view class="section_title">标题</view>
      <input type="text" class="input" name="title" placeholder="标题" />
      
    </view>

    <view class="section">
      <view class="section_title">类型</view>
      <picker class="picker" mode="selector" range="{{optionalType}}" value="{{taskType}}" bindchange="bindTaskTypeChange">
        <view class="taskType">{{taskType}}   
          <image class="picker_icon" src="../../../image/picker-icon.png"></image>
        </view>
      </picker>
    </view>

    <view class="section">
      <view class="section_title">描述</view>
      <view>
        <textarea type="text" class="input description" name="description" placeholder="任务描述" />
      </view>
    </view>

    <view class="section">
      <view class="section_title">开始时间</view>
      <picker class="picker" mode="date" value="{{beginTime}}" start="2019-06-01" bindchange="bindBeginTimeChange">
        <view class="beginTime">
          {{beginTime}}
          <image class="picker_icon" src="../../../image/picker-icon.png"></image>
        </view>
      </picker>
    </view>

    <view class="section">
      <view class="section_title">结束时间</view>
      <picker class="picker" mode="date" value="{{expireTime}}" start="2019-06-01" bindchange="bindExpireTimeChange">
        <view class="expireTime">
          {{expireTime}}
          <image class="picker_icon" src="../../../image/picker-icon.png"></image>
        </view>
      </picker>
    </view>

    <view class="section">
      <view class="section_title">地点</view>
      <view>
        <input type="text" class="input" name="position" placeholder="地点" />
      </view>
    </view>

    <view class="section">
      <view class="section_title">人数</view>
      <view>
        <input type="number" class="input" name="participantNum" placeholder="人数" />
      </view>
    </view>

    <view class="section">
      <view class="section_title">酬劳</view>
      <view>
        <input type="number" class="input" name="salary" placeholder="酬劳(元)" />
      </view>
    </view>

    <view class="section">
      <view class="section_title">标签</view>
      <view>
        <input type="text" class="input" name="tags" value="无" placeholder="标签" />
      </view>
    </view>


    
    
    
    <view class="apply_btn_area">
      <button formType="reset" class="apply_btn" type="primary">清空</button>
      <button formType="submit" class="apply_btn" type="primary">创建</button>
    </view>


   
  </form>
</view>