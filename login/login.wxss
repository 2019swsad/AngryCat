/* login/login.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: rgb(244,244,244);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main {
  background-color: #FFFFFF;
  
  width: 90%;
  height: 500px;
  border-radius: 1.5em;
  box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items: center;
}

.sign {
  padding-top: 40px;
  color: #8C55AA;
  font-family: 'Ubuntu', sans-serif;
  font-weight: bold;
  font-size: 23px;
}

.register_input {
  width: 270px;
  color: rgb(38, 50, 56);
  height: 50px;
  font-weight: 700;
  font-size: 18px;
  letter-spacing: 1px;
  background: rgba(136, 126, 126, 0.04);
  border: none;
  border-radius: 20px;
  outline: none;
  box-sizing: border-box;
  border: 2px solid rgba(0, 0, 0, 0.02);
  margin-bottom: 50px;
  text-align: center;
  font-family: 'Ubuntu', sans-serif;
}

.username {
  margin-top: 20px;

}

.password {
  margin-top: 60px;
}

form.form1 {
  padding-top: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.submit_btn {
  font-size: 17px;
  width: 150px;
  height: 45px;
  font-weight: 700;
  margin-top: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.registerNav {
  width: 150px;
  height: 45px;
  border-radius: 5px;
  background-color: rgb(235, 235, 235);
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 30px;

}
.registerNavText {
  width: 100%;
  text-align: center;
  font-size: 17px;
  font-weight: 700;
  color:rgb(80, 169, 55);

}
