<template name="singleOrder">
  <view class="single_task" bindtap="goToOrderDetail" mark:tid="{{tid}}" hover-class="hover">
    <view class="task_infor">

      <view class="task_name">
        <text>{{title}}</text>
      </view>

      <view class="task_price">
        <text>￥ {{salary}}</text>
      </view>

      <view class="task_state">
        <text>{{status}}</text>
      </view>

      <view class="people_number">
        <text>报名状况：{{currentParticipator}}/{{participantNum}}人</text>
      </view>

      <view class="task_time">
        <text>{{beginTime}}</text>
        <text>  ~  </text>
        <text>{{expireTime}}</text>
      </view>

      <view class="organizer">
        <!-- <image class="portrait" ></image> -->
        <text class="username">{{organizer}}</text>
      </view>

    </view>
  </view>
</template>